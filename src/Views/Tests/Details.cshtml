@model IS_distance_learning.Models.Test

@{
    ViewData["Title"] = "Подробнее";
}

<div class="d-flex flex-column align-items-center">
    <div class="d-flex flex-column mb-2 course">
        <h4>@Html.DisplayFor(model => model.Name)</h4>
        <span class="mt-3">Описание: @Html.DisplayFor(model => model.Description)</span>
    </div>
    <form method="get" class="mb-3">
        <input name="TestId" class="hide disabled invisible" type="hidden" value="@Model.Id" />
        <input type="submit" asp-action="Create" asp-controller="Questions" class="btn btn-primary" value="Добавить вопрос" />
    </form>
        
    
    <table border="1" bordercolor="#dee2e6" class="table">
        <tr>
        <tr>
            <th>Вопрос</th>
            <th>
                Редактировать
            </th>
            <th>
                Удалить вопрос
            </th>
        </tr>
            @foreach (Question q in Model.Questions)
            {
    <tr>
        <td>@q.Text</td>
        <td>
            <form method="get">
                <input name="id" class="hide disabled invisible" type="hidden" value="@q.Id" />
                <input type="submit" asp-action="Update" asp-controller="Questions" class="btn btn-info" value="Редактировать" />
            </form>
        </td>
        <td>
            <form method="get">
                <input name="id" class="hide disabled invisible" type="hidden" value="@q.Id" />
                <input type="submit" asp-action="Details" asp-controller="Questions" class="btn btn-info" value="Подробнее" />
            </form>
        </td>
        <td>
            <form method="post">
                <input name="id" class="hide disabled invisible" type="hidden" value="@q.Id" />
                <input type="submit" asp-action="Delete" asp-controller="Questions" class="btn btn-danger" value="Удалить" />
            </form>
        </td>
    </tr>
            }
    </table>
</div>
