@model IS_distance_learning.ViewModels.LoginModel

@{
    ViewData["Title"] = "Логин";
}

<h1>Вход</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Account" method="post" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label">Введите логин</label>
                    <input type="text" asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Введите пароль</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Войти" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}